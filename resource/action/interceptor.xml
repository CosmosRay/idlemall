<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
	<package name="interceptor" extends="json-default">
		
		<interceptors>
        <!-- 定义Session控制拦截器 -->
        <interceptor name="SessionValidation" class="com.idlemall.cosmos.util.interceptor.SessionValidationInterceptor"/>
        </interceptors>  
       <!-- 定义全局处理结果 -->
        <global-results>
        <!-- 逻辑名为login的结果，映射到/login.jsp页面 -->
        <result name="loginPage" type="redirect">/login.html</result>
        </global-results>
	</package>
</struts>